{% extends "front/base_front.html.twig" %}

{% block title %}
	Brochures | Oriflam MÃ©dias
{% endblock %}

{% block body %}
	<div class="container-fluid booklets">
		<div class="row booklets-top position-absolute justify-content-end">
			<div class="col-2">
				<img src="{{ asset('build/logo_oriflam.png') }}" alt="logo" class="img-fluid">
			</div>
		</div>
		<div class="row booklets-title justify-content-start mt-3">
			<div class="col-8 offset-2">
				<h1 class="booklets-title-text">Brochures</h1>
			</div>
		</div>
		<div class="row booklets-middle">
			<div class="col-6 booklets-middle-left">
				<div class="row booklets-middle-left-top">
					<div class="col-10 offset-1 mt-5">
						<img src="{{ asset('build/magazines.png') }}" alt="" class="img-fluid front mt-5">
					</div>
				</div>
			</div>
			<div class="col-6 booklets-middle-right">
				<div class="row">
					{% if booklets is not empty %}
						<div class="col-12 booklets-middle-right-booklets mt-5">
							<p class="booklets-middle-right-booklets-title">
								Brochures
							</p>
							<ul class="list-group">
								{% for booklet in booklets %}
									<li class="list-group-item">
										<form action="" class="add-to-cart">
											<div class="row">
												<div class="col-4 d-flex align-items-center">
													<p class="m-0">{{ booklet.name }}</p>
												</div>
												{% if booklet.options is not null %}
													{% set options = booklet.options %}
													<div class="col-4 d-flex align-items-center">
														<select name="options-{{ booklet.id }}" class="options-select form-control">
															{% for option in options %}
																<option data-price="{{ option.price }}" value="{{ option.id }}">
																	{{ option.label }}
																</option>
															{% endfor %}
														</select>
													</div>
												{% endif %}
												<div class="col-2 d-flex align-items-center">
													<p class="price d-inline-block m-0"></p>
												</div>
												<div class="col-2 d-flex align-items-center">
													<input type="hidden" value="{{ booklet.id }}">
													<button type="submit" class="btn btn-primary rounded-0">
														<i class="fas fa-cart-plus"></i>
													</button>
												</div>
											</div>
										</form>
										<p>Grammage papier standard (nous contacter pour personnaliser)</p>
									</li>
								{% endfor %}
							</ul>
						</div>
					{% endif %}
				</div>
				{% include "front/category/_contact-us.html.twig" %}
			</div>
		</div>
	</div>
{% endblock %}
