{% extends "front/base_front.html.twig" %}

{% block title %}
	Flyers | Oriflam MÃ©dias
{% endblock %}

{% block body %}
	<div class="container-fluid flyers">
		<div class="row flyers-top position-absolute justify-content-end">
			<div class="col-2">
				<img src="{{ asset('build/logo_oriflam.png') }}" alt="logo" class="img-fluid">
			</div>
		</div>
		<div class="row flyers-title justify-content-start mt-3">
			<div class="col-8 offset-2">
				<h1 class="flyers-title-text">Flyers</h1>
			</div>
		</div>
		<div class="row flyers-middle">
			<div class="col-6 flyers-middle-left py-5">
				<div class="row flyers-middle-left-top">
					<div class="col-5 offset-1">
						<img src="{{ asset('build/Flyer_lexus_casquette.png') }}" alt="" class="img-fluid mb-2">
						<img src="{{ asset('build/flyer_lexus-1.png') }}" alt="" class="img-fluid">
					</div>
					<div class="col-5">
						<img src="{{ asset('build/Affiche_amis_pierre.jpg') }}" alt="" class="img-fluid">
					</div>
				</div>
			</div>
			<div class="col-6 flyers-middle-right py-5">
				<div class="row">
					{% if flyers is not empty %}
						<div class="col-11 flyers-middle-right-flyers">
							<p class="flyers-middle-right-flyers-title">
								Flyers
							</p>
							<ul class="list-group">
								{% for flyer in flyers %}
									<li class="list-group-item">
										<form action="" class="add-to-cart">
											<div class="row">
												<div class="col-4 d-flex align-items-center">
													<p class="m-0">{{ flyer.name }}</p>
												</div>
												{% if flyer.options is not null %}
													{% set options = flyer.options %}
													<div class="col-4 d-flex align-items-center">
														<select name="options-{{ flyer.id }}" class="form-control options-select">
															{% for option in options %}
																<option
																data-price="{{ option.price }}" 
																value="{{ option.id }}">
																{{ option.label }}
																</option>
															{% endfor %}
														</select>
													</div>
												{% endif %}
												<div class="col-2 d-flex align-items-center">
													<p class="price d-inline-block m-0"></p>
												</div>
												<div class="col-2 d-flex align-items-center">
												<input type="hidden" value="{{ flyer.id }}">
													<button type="submit" class="btn btn-primary rounded-0">
														<i class="fas fa-cart-plus"></i>
													</button>
												</div>
											</div>
										</form>
									</li>
								{% endfor %}
							</ul>
						</div>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
