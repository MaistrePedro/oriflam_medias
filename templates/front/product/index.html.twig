{% extends 'front/base_front.html.twig' %}

{% block title %}
	{{ product.name }}
	| Oriflam Médias
{% endblock %}

{% block body %}
	<main class="container product">
		<section class="row">
			<div class="col-12 col-md-6">
				{% if product.image %}
					<img src="{{ asset('uploads/images/' ~ product.image.name ~ '.' ~ product.image.extension) }}" alt="" class="w-100 product-image">
				{% endif %}
			</div>
			<div class="col-12 col-md-6">
				<h2 class="product-title">
					{{ product.name }}
				</h2>
				{% if product.options is not null %}
					{% set options = product.options %}
					<div class="col-8 d-flex align-items-center">
						<select name="options-{{ product.id }}" class="form-control options-select">
							{% for option in options %}
								<option data-price="{{ option.price }}" value="{{ option.id }}">
									{{ option.label }}
									-
									{{ option.price }}
								</option>
							{% endfor %}
						</select>
						<div class="col-2 d-flex align-items-center">
							<p class="price d-inline-block m-0"></p>
						</div>
						<div class="col-2 d-flex align-items-center">
							<input type="hidden" value="{{ product.id }}">
							<button type="submit" class="btn btn-primary rounded-0">
								<i class="fas fa-cart-plus"></i>
							</button>
						</div>
					</div>
				{% endif %}
			</div>
		</section>
		<section class="product-assets">
			<div class="product-assets-body">
			<div class="product-assets-title">
				<h3>Description</h3>
			</div>
				<p>{{ product.description }}</p>
			<div class="product-assets-title">
				<h3>Caractéristiques</h3>
			</div>
				<ul>
					{% for feature in product.features %}
						<li class="row">
							<div class="col-4">
								{{ feature.type }}
							</div>
							<div class="col-8">
								{{ feature.content }}
							</div>
						</li>
					{% endfor %}
				</ul>
			</div>
		</section>
	</main>
{% endblock %}

{% block javascripts %}
	{{ encore_entry_script_tags('product') }}
{% endblock %}
