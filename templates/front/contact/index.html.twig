{% extends 'front/base_front.html.twig' %}

{% block title %}Contact | Oriflam Medias
{% endblock %}

{% block body %}
	<div class="contact container-fluid">
		<div class="contact-top row justify-content-end position-absolute">
			<div class="col-2">
				<img src="{{ asset('build/logo_oriflam.png') }}" alt="logo" class="img-fluid mb-3">
			</div>
		</div>
		<div class="row justify-content-center">
			<div class="col-6 mt-5">
				<h1 class="contact-title mb-5">Comment nous contacter</h1>
				<img src="{{ asset('build/logo_oriflam.png') }}" alt="" class="contact-logo img-fluid mb-3">
				<p class="contact-text">Merci de renseigner le formulaire</p>
				{{ form_start(form) }}
				{{ form_widget(form.lastname) }}
				{{ form_widget(form.firstname) }}
				{{ form_widget(form.company) }}
				{{ form_widget(form.email) }}
				{{ form_widget(form.address) }}
				{{ form_widget(form.postalCode) }}
				{{ form_widget(form.city) }}
				{{ form_widget(form.country) }}
				{{ form_widget(form.tvaNumber) }}
				<div class="mt-3">
					{{ form_widget(form.content) }}
				</div>
				<button class="btn btn-primary rounded-0">Envoyer</button>
				{{ form_end(form) }}
			</div>
		</div>
		<div class="contact-bottom row justify-content-center">
			<div class="col-8">
				<p class="contact-bottom-text text-center">
					20 rue Flandres-Dunkerque - 45160 Olivet -
					<a href="tel:0238237762">02 38 23 77 62</a>
					-
					<a href="mailto:contact@editions-lebakh.fr">contact@editions-lebakh.fr</a><br>
					Du lundi au vendredi 09 h 00 - 18 h 00
				</p>
			</div>
		</div>
	</div>
{% endblock %}
