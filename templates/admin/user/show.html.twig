{% extends 'admin/base_back.html.twig' %}

{% block title %}Utilisateur {{ user.firstname ~ ' ' ~ user.lastname }} {% endblock %}

{% block body %}
    <h1>Utilisateur {{ user.firstname ~ ' ' ~ user.lastname }} </h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{% for role in user.roles %}
						{% if role == "ROLE_USER" %}
							Utilisateur
						{% elseif role == "ROLE_SUPERADMIN" %}
							Super Administrateur
						{% elseif role == "ROLE_ADMIN" %}
							Administrateur
						{% endif %}
					{% endfor %}</td>
            </tr>
            <tr>
                <th>Civilité</th>
                <td>{{ user.civility }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Date de naissance</th>
                <td>{{ user.birthDate ? user.birthDate|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ user.address }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ user.postalCode }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ user.city }}</td>
            </tr>
            <tr>
                <th>N° de mobile</th>
                <td>{{ user.mobileNumber }}</td>
            </tr>
            <tr>
                <th>Newsletter</th>
                <td>{{ user.newsletter ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">back to list</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

    {{ include('admin/user/_delete_form.html.twig') }}
{% endblock %}
