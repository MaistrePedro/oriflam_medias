{% extends 'admin/base_back.html.twig' %}

{% block title %}Liste des Produits
{% endblock %}

{% block body %}
	<main class="admin-product container">
		<h1>Liste des produits</h1>
		<table class="table">
			<thead>
				<tr>
					<th>Name</th>
					<th>Cost</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for product in products %}
					<tr>
						<td>{{ product.name }}</td>
						<td>{{ product.cost }}</td>
						<td>
							<a href="{{ path('product_show', {'id': product.id}) }}">Voir</a>
							<a href="{{ path('product_edit', {'id': product.id}) }}">Editer</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="7">Aucun produit trouv√©</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('product_new') }}">Ajouter un produit</a>
	</main>
{% endblock %}
