{% extends 'admin/base_back.html.twig' %}

{% block title %}{{ product.name }}
{% endblock %}

{% block body %}
<main class="container">
	<h1>{{ product.name }}</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Nom</th>
				<td>{{ product.name }}</td>
			</tr>
			<tr>
				<th>Caractéristiques</th>
				<td>
					{% for feature in product.features %}
						{{ feature.type }} : {{ feature.content }} <br>
					{% endfor %}
				</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ product.description }}</td>
			</tr>
			<tr>
			<tr>
				<th>Options</th>
				<td>
					{% for option in product.options %}
						{{ option.label }} : {{ option.price }}€ <br>
					{% endfor %}
				</td>
			</tr>
				<th>Image</th>
				<td>
					{% if product.image %}
						{{ product.image.name ~ '.' ~ product.image.extension }}
					{% else %}
						Pas de photo
					{% endif %}
				</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('product_index') }}">Retour à la liste</a>

	<a href="{{ path('product_edit', {'id': product.id}) }}">Editer</a>

	{{ include('admin/product/_delete_form.html.twig') }}
</main>
{% endblock %}
