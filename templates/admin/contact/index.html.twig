{% extends 'admin/base_back.html.twig' %}

{% block title %}Messages{% endblock %}

{% block body %}
    <h1>Messages</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Émetteur</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for message in messages %}
            <tr>
                <td>{{ message.firstname ~ ' ' ~ message.lastname }}</td>
                <td>{{ message.email }}</td>
                <td>
                    <a href="{{ path('contact_show', {'id': message.id}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas de messages enregistrés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
